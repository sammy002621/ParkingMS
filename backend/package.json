{
  "name": "PMS",
  "version": "1.0.0",
  "description": "Library Management System built for RCA",
  "main": "app.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon --exec ts-node src/swagger/index.ts  --ignore src/swagger/doc/swagger.json",
    "start": "ts-node src/app.ts",
    "build": "tsc",
    "serve": "npx ts-node src/swagger/index.ts",
    "prisma:gen": "npx prisma generate --schema src/prisma/schema.prisma",
    "prisma:migrate": "npx prisma migrate dev --schema=./src/prisma/schema.prisma --name=init",
    "prisma:studio": "npx prisma studio --schema src/prisma/schema.prisma",
    "prisma:all": "npm run prisma:migrate && npm run prisma:gen",
    "prisma:seed": "ts-node src/seeders/seed.ts",
    "docker:build": "docker build -t jodos/ne-restful .",
    "docker:run": "docker run -p 5058:5058 jodos/ne-restful"
  },
  "author": "jodos",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.9.1",
    "@types/pg": "^8.11.14",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cloudinary": "^1.36.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.1",
    "nodemon": "^2.0.22",
    "pg": "^8.11.1",
    "reflect-metadata": "^0.2.2",
    "swagger-autogen": "^2.23.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.1.5",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/morgan": "^1.9.9",
    "@types/nodemailer": "^6.4.7",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^9.0.2",
    "prisma": "^5.9.1",
    "swagger-ui-express": "^5.0.0"
  },
  "packageManager": "yarn@4.9.1+sha512.f95ce356460e05be48d66401c1ae64ef84d163dd689964962c6888a9810865e39097a5e9de748876c2e0bf89b232d583c33982773e9903ae7a76257270986538"
}
